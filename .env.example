# LAN-IOT Signer Environment Variables
# Copy this file to .env and fill in your actual values

# Port for the server to listen on (Railway will set this automatically in production)
PORT=8080

# Bearer token for API authentication - use a strong random token
# Generate one with: openssl rand -hex 32
SIGNER_TOKEN=your-secure-bearer-token-here

# Intermediate CA Certificate (PEM format)
# Can be either:
# 1. Path to a file: ./certs/dev-int.crt
# 2. Full PEM content (multiline string)
# 3. Base64-encoded PEM content
DEV_INT_CRT=./certs/dev-int.crt

# Intermediate CA Private Key (PEM format)
# Can be either:
# 1. Path to a file: ./certs/dev-int.key
# 2. Full PEM content (multiline string)
# 3. Base64-encoded PEM content
DEV_INT_KEY=./certs/dev-int.key

# Optional: Allow signing certificates for private IP addresses (true/false)
ALLOW_PRIVATE_IPS=true

# Optional: Default certificate validity in days (1-365)
DEFAULT_DAYS=7
